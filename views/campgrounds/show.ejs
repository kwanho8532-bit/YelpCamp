<%- layout('./layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <% campground.images.forEach((img, i)=> { %>
                            <div class="carousel-item <%= i===0? 'active': '' %>">
                                <img src="<%= img.url %>" class="d-block w-100" alt="...">
                            </div>
                            <% }) %>
                    </div>
                    <% if (campground.images.length> 1) { %>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                        <% } %>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">
                        \<%= campground.price %>/night
                    </li>
                    <li class="list-group-item">
                        Submitted By
                        <b>
                            <%= campground.author.username %>
                        </b>
                    </li>
                    <% if (currentUser && campground.author.equals(currentUser)) { %>
                        <li class="list-group-item">
                            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-info">Edit</a>
                            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST"
                                class="d-inline">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </li>
                        <% } %>
                </ul>
            </div>
        </div>
        <div class="col-6">
            <h3>Reviews</h3>
            <% if (currentUser) { %>
                <form action="/campgrounds/<%= campground._id %>/review" method="POST" class="mb-3">
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div class="mb-3">
                        <label for="content" class="form-label"></label>
                        <textarea class="form-control" id="content" name="review[content]" rows="3"></textarea>
                    </div>
                    <button class="btn btn-primary btn-sm">Submit</button>
                </form>
                <% } %>
                    <hr>
                    <% for(let review of campground.reviews) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-subtitle mb-2 text-muted">
                                    <%= review.user.username %>
                                </h5>
                                <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                <p class="lead fs-6">
                                    <%= review.content %>
                                </p>
                                <% if (currentUser && review.user.equals(currentUser)) { %>
                                    <form
                                        action="/campgrounds/<%= campground._id %>/review/<%= review._id %>?_method=DELETE"
                                        method="POST">
                                        <button class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>
    <a href="/campgrounds">Campgrounds</a>